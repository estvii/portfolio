         }
        
    }
    .internet-tech {
        h3 {
            font-family: $ff-h;
            color: $clr-secondary-yel;
        }
        p {
            font-family: $ff-p;
        }
    }
}

/* Internet End html */

/* Project App html Start */ 
#go2project {
    position: relative;
    top: -56px;
}
/* Project App html End */ 

/* Media Queries Start */
@media (max-width: 768px) {
    .carousel-caption {
        top: 55%;
    }
    .carousel-caption h3 {
        font-size: 300%;
    }
}

@media (max-width: 576px) {
    .carousel-caption {
        top: 50%;
    }
    .carousel-caption h3 {
        font-size: 200%;
    }
    .carousel-caption .btn {
        font-size: 70%;
    }
}

@media (max-width: 440px) {
    .carousel-caption {
        top: 50%;
    }
    .carousel-caption h3 {
        font-size: 150%;
    }
    .carousel-caption .btn {
        font-size: 60%;
    }
}

@media (max-width: 360px) {
    .carousel-caption {
        top: 25%;
    }
    .carousel-caption h3 {
        font-size: 100%;
    }
    .carousel-caption .btn {
        font-size: 20%;
    }
    .carousel-indicators {
        display: none;
    }
}
/* Media Queries End */


