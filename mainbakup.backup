@import 'colors';

/* fonts */
$ff-h: 'Open Sans', sans-serif;
$ff-p: 'Raleway', sans-serif;


body {
    background-color: $clr-ntrl-min;
}

html {
    scroll-behavior: smooth;
}

hr {
    width: 50%;
    margin: auto;
    margin-top: 5%;
    margin-bottom: 5%;
    border-color: #CCC;
}

/* Navbar START */
.navbar {
    background-color: $clr-primary;
    .navbar-brand {
        color: $clr-ntrl-min;
        font-family: $ff-h;    
    }
    .navbar-nav {
        .nav-item {
            .nav-link {
                color: $clr-ntrl-min;
                font-family: $ff-h
            }
        }
    }       
}
/* Navbar END */

/* About Me START */
#go2about {
    padding-top: 20px;
}

.container-fluid {
    .profilePicture {
        border-radius: 50%;
        border: 7px solid $clr-primary;
        width: 250px;
        height: 250px;
        display: block;
        margin: auto;
    }
    .about-me {
        h2 {
            padding-top: 2rem;
            font-family: $ff-h;
        }
        .web-dev {
            color: $clr-secondary-red;
        }
        .full-stack {
            color: $clr-secondary-yel-dkr;
        }
    }
    p { 
        font-family: $ff-p;
        
    }
    ul li {
        font-family: $ff-p;
    }
}
/* About Me END */

/* Education and Career START*/ 
#go2educareer {
    position: relative;
    top: -56px;
}
.container-fluid {
    .educareer-icons {
        h2 {
            font-family: $ff-h;
        }
        p {
            font-family: $ff-p;
        }
        .fa-briefcase {
            font-size: 4em;
            padding: 10px;
        }
        .fa-graduation-cap {
            font-size: 4em;
            padding: 10px;
        }
    }
}
/* Education and Career END*/ 

/* Project Start*/
#go2projects {
    position: relative;
    top: -56px;
}

.container-fluid {
    .projects {
        font-family: $ff-h;
        padding-bottom: 1rem;
        
    }
    .fa-project-diagram {
        font-size: 4em;
        padding: 10px;
    }
    .card-padding {
        padding: 1rem;   
    }
    .card {
        width: auto;
        height: 100%;
        &:hover {
            box-shadow: 5px 10px 10px rgba(0,0,0,0.15);
        }
        .card-img-top {
            width: 90%;
            padding: 1em;
            margin: auto;
        }
    }
}
/* Project End */

/* Carousel (Internet History) Start*/
#go2carousel {
    position: relative;
    top: -56px;
}

.carousel {
    width: 95%;
    height: auto;
    margin: auto;
    .carousel-item {
        img {
        width: 100%;
        height: auto; 
        }
        .carousel-caption {
            position: absolute;
            top: 55%;
            transform: translateY(-50%);
        }
        h3 {
            font-family: $ff-h;
            color: $clr-ntrl-min;
        }
    }
}
/* Carousel (Internet History) End */

/* Skills Start */
#go2skills {
    position: relative;
    top: -56px;
}
.container-fluid {
    .skills {
        font-family: $ff-h;
        text-align: center;
    }
    .skills-icons {
        font-size: 5em;
        text-align: center;
    }
}
/* Skills End */

/* Contact Me Icons Start*/
#go2contacts {
    position: relative;
    top: -56px;
}
.container-fluid {
    .contact-me {
        font-family: $ff-h;
        text-align: center;
    }
    .contact-icons {
        text-align: center;
        .fa-envelope {
            font-size: 5em;
            color: #C8393B;
            padding: 10px;
             margin: 10px 30px;
        }
        .fa-github {
            font-size: 5em;
            color: #000;
            padding: 10px;
             margin: 10px 30px;
        }
        .fa-linkedin {
            font-size: 5em;
            color: #1275B1;
            padding: 10px;
             margin: 10px 30px;
        }
    }
}
/* Contact Me Icons End */

/* Footer Start */
.footer {
    font-family: $ff-p;
    font-size: 13px;
    text-align: center;
    padding-top: 10px;
}

/* Footer End */

// Other Html Files
